.resources.new
  .step
    .step-header
      .step-title.text-center
        %i.icon.icon-large.icon-profile.white
        %h1 Forgot your password?
    .content-container
      .row.columns.small-12.medium-8.medium-offset-2.large-6.large-offset-3
        = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
          = devise_error_messages!
          .field
            = f.label :email
            = f.email_field :email, autofocus: true
          .actions
            = f.submit "Send me password reset instructions", { class: 'button primary expanded margin-top-20' }
        = render "devise/shared/links"
